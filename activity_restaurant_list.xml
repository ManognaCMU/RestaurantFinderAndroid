<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RestaurantListActivity">
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="310dp"
            android:layout_height="325dp"
            android:id="@+id/restaurant_RecycleView"
            android:scrollbars="vertical"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="100dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="              RESTAURANTS"
            android:layout_width="284dp"
            android:layout_height="36dp"
            android:fontFamily="sans-serif-condensed"
            android:visibility="invisible"
            android:textSize="30sp"
            android:textColor="#8D12C6"
            android:textStyle="bold"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/restaurant_RecycleView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
            app:layout_constraintVertical_bias="0.437"/>
    <TextView
            android:text="Note: Click on one of the restaurants to view few pictures"
            android:layout_width="412dp"
            android:layout_height="77dp"
            android:id="@+id/textView2"
            android:visibility="invisible"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20sp"
            android:textColor="#010208"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_RecycleView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.86"/>
    <Button
            android:text="BACK"
            android:layout_width="178dp"
            android:layout_height="57dp"
            android:id="@+id/button"
            android:visibility="invisible"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#2040E7"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_RecycleView"
            app:layout_constraintBottom_toTopOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.747"/>
</androidx.constraintlayout.widget.ConstraintLayout>