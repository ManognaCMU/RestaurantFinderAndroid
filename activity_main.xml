<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Enter City"
            android:fontFamily="serif-monospace"
            android:textSize="30sp"
            android:textColor="#E7204D"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/city_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.082" android:layout_marginTop="60dp"/>
    <TextView
            android:text="Enter State"
            android:layout_width="wrap_content"
            android:fontFamily="serif-monospace"
            android:textSize="30sp"
            android:textColor="#E7204D"
            android:textStyle="bold"
            android:layout_height="wrap_content" android:id="@+id/state_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.091" android:layout_marginTop="184dp"/>
    <EditText
            android:layout_width="324dp"
            android:layout_height="53dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/city_name_input"
            app:layout_constraintTop_toBottomOf="@+id/city_name"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.206"/>
    <EditText
            android:layout_width="324dp"
            android:layout_height="53dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/state_name_input"
            app:layout_constraintTop_toBottomOf="@+id/state_name"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.206"/>
    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#2040E7"
            android:layout_height="wrap_content" android:id="@+id/submit_button"
            app:layout_constraintTop_toBottomOf="@+id/city_name_input"
            android:layout_marginTop="156dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.445"/>
</androidx.constraintlayout.widget.ConstraintLayout>